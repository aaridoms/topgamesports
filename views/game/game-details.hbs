<div class="centerb">
  <div class="details">
    <div>
      <img
        src="{{oneGame.cover}}"
        alt="{{oneGame.title}}-cover"
        style="width: 600px; height: 600px; object-fit: cover; object-position: center top;"
      />

    </div>
    <div>

      <h2>{{oneGame.title}}</h2>
      <p>{{oneGame.description}}</p>
      <h4>Metascore: {{oneGame.rating}}</h4>
      <div class="text-success">
        <hr />
      </div>
      <h5>Platform(s)</h5>
      {{#each oneGame.platform}}
        <li>{{this}}</li>
      {{/each}}
      <div class="text-success">
        <hr />
      </div>
      <h5>
        Launch date:
      </h5>
      <p>{{oneGame.launchDate}}</p>
      <div class="text-success">
        <hr />
      </div>
      <h5>Genre(s):</h5>
      {{#each oneGame.genre}}
        <li>{{this}}</li>
      {{/each}}
      <div class="text-success">
        <hr />
      </div>
      <div class="d-flex justify-content-around">
        <form action="/user/{{oneGame._id}}/favgame" method="post">
          <button class="btn btn-outline-warning"><svg
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
              class="w-5 h-5"
              width="20px"
            >
              <path
                fill-rule="evenodd"
                d="M10.868 2.884c-.321-.772-1.415-.772-1.736 0l-1.83 4.401-4.753.381c-.833.067-1.171 1.107-.536 1.651l3.62 3.102-1.106 4.637c-.194.813.691 1.456 1.405 1.02L10 15.591l4.069 2.485c.713.436 1.598-.207 1.404-1.02l-1.106-4.637 3.62-3.102c.635-.544.297-1.584-.536-1.65l-4.752-.382-1.831-4.401z"
                clip-rule="evenodd"
              />
            </svg>
            Add to favorites</button>
        </form>

        <form action="/user/{{oneGame._id}}/no-favgame" method="post">
          <button class="btn btn-outline-danger">Delete from favorites</button>
        </form>
      </div>
      <div class="d-flex justify-content-center">
        {{#if message}}
        <div class="alert alert-primary" role="alert" style="height: 10px;color:green">
          <p>{{message}}</p>
        </div>
        {{/if}}

      </div>
    </div>
  </div>
  <div>
    <iframe
      width="1260"
      height="815"
      src={{oneGame.video}}
      title="YouTube video player"
      frameborder="0"
      allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
      allowfullscreen
    >
    </iframe>
  </div>
</div>