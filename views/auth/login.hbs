<div>

  <h3>Log In</h3>

  <form action="/auth/login" method="post">
    <label for="username">Username</label>
    <input type="text" name="username">

    <label for="password">Password</label>
    <input type="password" name="password">


    <button>Log In</button>

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}

  </form>

</div>