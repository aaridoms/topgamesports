<div class="centerb">
  <h1>User List</h1>

  <table class="table table-striped table-hover" style="width: 1500px;">
    <thead>
      <tr>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each listOfUsers}}
      <tr>
        <td>{{this.username}}</td>
        <td>{{this.email}}</td>
        <td>
          <a href="/user/{{this._id}}/delete"><button class="btn btn-danger">Delete</button></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>