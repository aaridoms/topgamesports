
<div>

<H1>AÃ±ade un Juego</H1>

<form action="/game/new-game" method="post">
    <label for="title">Title</label>
    <input type="text" name="title">

    <label for="description">Description</label>
    <input type="text" name="description">

    <label for="cover">Cover</label>
    <input type="text" name="cover">

    <label for="genre">Genre</label>
    <select name="genre" multiple>
        <option value="action">Action</option>
        <option value="adventure">Adventure</option>
        <option value="shooter">Shooter</option>
        
    </select>
    
    <label for="rating">Rating</label>
    <input type="text" name="rating">

    <label for="video">Video</label>
    <input type="text" name="video">

    <label for="platform">Platform</label>
     <select name="platform" multiple>
        <option value="Sony">Sony</option>
        <option value="Xbox">Xbox</option>
        <option value="Nintendo">Nintendo</option>
        <option value="Steam">Steam</option>
     </select>

    <label for="launchDate">LaunchDate</label>
    <input type="date" name="launchDate">

    <label for="isCompetitive">Is Competitive?</label>
    <select name="isCompetitive" multiple>
        <option value="true">True</option>
        <option value="false">False</option>
    </select>

    {{!-- <input type="checkbox" checked="true" name="isCompetitive"> --}}

    {{#if errorMessage}}
      <p>{{errorMessage}}</p>
    {{/if}}

    <button>Signup</button>
  </form>


</div>
