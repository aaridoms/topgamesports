<div class="centerb">
    <h1>Admin Game List</h1>
  
    <table class="table table-striped table-hover" style="width: 1000px;">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Rating</th>
        <th scope="col">Launch Date</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each allGames}}
      <tr>
        <td>{{this.title}}</td>
        <td>{{this.rating}}</td>
        <td>{{this.launchDate}}</td>
        <td>
        <a href="/game/{{this._id}}/edit"><button class="btn btn-warning">Edit</button></a>

        <a href="/game/{{this._id}}/delete"><button class="btn btn-danger">Delete</button></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/game/new-game"><button class="btn btn-success">New Game</button></a>
</div>