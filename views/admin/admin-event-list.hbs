<div class="centerb">
    <h1>Admin Event List</h1>
    
    <table class="table table-striped table-hover" style="width: 1500px;">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Date</th>
        <th scope="col">Game</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody class="table-group-divider">
      {{#each allEvents}}
      <tr>
        <td>{{this.name}}</td>
        <td>{{this.startDate}}</td>
        <td>{{this.game.title}}</td>
        <td>
        <a href="/event/{{this._id}}/edit"><button class="btn btn-warning">Edit</button></a>

        <a href="/event/{{this._id}}/delete"><button class="btn btn-danger">Delete</button></a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
  <a href="/event/new-event"><button class="btn btn-success">New Event</button></a>
</div>