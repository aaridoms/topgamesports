<div class="centerb">
  <div class="details d-flex">
    <div>
      <img
        src="{{oneEvent.imageUrl}}"
        alt="{{oneGame.title}}-cover"
        style="width: 700px; height: 500px; object-fit: cover; object-position: center top;"
      />
    </div>
    <div>
      <h5>Event Details</h5>
      <h2>{{oneEvent.name}}</h2>
      <h4>GAME:
        <a
          href="/game/{{oneEvent.game._id}}/details"
        >{{oneEvent.game.title}}</a>
      </h4>
      <div class="text-success">
        <hr class="border border-primary border-3 opacity-75" />
      </div>
      <p>{{oneEvent.description}}</p>
      <div class="text-success">
        <hr class="border border-danger border-2 opacity-50" />
      </div>
      <h5>START DATE:{{oneEvent.startDate}}</h5>

      <p>Current Users who joined the event:{{numberOfParticipants}}</p>

      <div class="d-flex">
        <form action="/event/{{oneEvent._id}}/join" method="post">
          <button class="btn btn-outline-success">Join</button>
        </form>

        <form action="/event/{{oneEvent._id}}/leave" method="post">
          <button class="btn btn-outline-danger">Leave</button>
        </form>
      </div>
      <div class="d-flex justify-content-center">
        {{#if messageError}}
          <p>{{messageError}}</p>
        {{/if}}

      </div>

    </div>

  </div>

</div>